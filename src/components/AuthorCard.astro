---
import type { CollectionEntry } from 'astro:content';
import { Image } from "astro:assets";

interface Props {
  author: CollectionEntry<'author'>;
}

const { author } = Astro.props;

const { name, avatar, twitter, linkedIn, github, bio, subtitle  } = author.data;
---

<article class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5 flex flex-col">
  <div>
    <Image
      class="w-34 h-34 rounded-full mx-auto"
      src={avatar}
      alt={`Avatar de ${name} - ${subtitle}`}
      width={120}
      height={120}
    />
  
    <h2 class="text-center text-2xl font-semibold mt-3">{name}</h2>
    <p class="text-center text-gray-600 mt-1">{subtitle}</p>
    <div class="flex justify-center mt-5">
      <a target="_blank" href={`https://x.com/${twitter}`} class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a>
      <a target="_blank" href={linkedIn} class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a>
      <a target="_blank" href={github} class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
    </div>
  </div>
  <div class="mb-5 flex-1">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-600 mt-2 mb-2">{bio}</p>
  </div>
  <div class="flex justify-end">
    <a class="bg-blue-400 text-gray-300 p-1 rounded-sm" href={`/blog/${author.id}`}>Leer m√°s</a>
  </div>
</article>