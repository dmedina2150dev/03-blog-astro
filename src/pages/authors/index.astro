---
import { getCollection } from "astro:content";

import MainLayout from "@layouts/MainLayout.astro";
import AuthorCard from "src/components/AuthorCard.astro";
import { siteConfig } from "src/config/site-config";

const authors = await getCollection('author');
---

<MainLayout title={`${siteConfig.title} - Autores`}>
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <section class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {
          authors.map((author) => <AuthorCard  author={author} />)
        }
      </section>
      
    </div>
  </section>
</MainLayout>